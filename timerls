-- Create a ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
screenGui.ResetOnSpawn = false -- Prevent the GUI from resetting on player respawn

-- Create a Frame
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 200, 0, 100) -- Size of the frame
frame.Position = UDim2.new(0.5, -100, 0.5, -50) -- Center the frame
frame.BackgroundColor3 = Color3.fromRGB(64, 64, 64) -- Dark gray background
frame.Parent = screenGui

-- Create a TextLabel
local textLabel = Instance.new("TextLabel")
textLabel.Size = UDim2.new(1, 0, 1, 0) -- Fill the entire frame
textLabel.BackgroundTransparency = 1 -- No background for the label
textLabel.TextColor3 = Color3.new(0, 0, 0) -- Black text color
textLabel.TextScaled = true -- Scale the text to fit the label
textLabel.Font = Enum.Font.SourceSans -- Set the font
textLabel.Text = "0:00" -- Initial timer text
textLabel.Parent = frame

-- Timer logic
local startTime = tick() -- Start the timer from the moment the script runs

game:GetService("RunService").RenderStepped:Connect(function()
    local elapsedTime = tick() - startTime
    local minutes = math.floor(elapsedTime / 60)
    local seconds = math.floor(elapsedTime % 60)
    textLabel.Text = string.format("%d:%02d", minutes, seconds) -- Update the timer text
end)
